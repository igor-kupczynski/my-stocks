{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "my-stocks",
  "version": "0.0.1",
  "title": "My Stocks",
  "description": "View your stock watchlist with current prices and daily performance",
  "icon": "extension-icon.png",
  "author": "igor_kupczynski",
  "platforms": [
    "macOS",
    "Windows"
  ],
  "categories": [
    "Finance"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "my-stocks",
      "title": "My Stocks",
      "description": "View you stocks watchlist",
      "mode": "view",
      "preferences": [
        {
          "name": "stockSymbols",
          "type": "textfield",
          "title": "Stock Symbols",
          "description": "Comma-separated list of stock symbols (e.g., AAPL, GOOGL, MSFT)",
          "placeholder": "AAPL, GOOGL, MSFT, TSLA",
          "required": false,
          "default": "AAPL, GOOGL, MSFT, TSLA"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.103.8",
    "@raycast/utils": "^2.2.2",
    "yahoo-finance2": "^3.10.2"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.1.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@vitest/coverage-v8": "^4.0.14",
    "eslint": "^9.39.1",
    "happy-dom": "^20.0.10",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.14"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish",
    "prepare": "husky"
  }
}
